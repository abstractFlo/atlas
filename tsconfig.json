{
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "__tests__",
    "**/*.spec"
  ],
  "files": [],
  "compilerOptions": {
    "skipLibCheck": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "esnext"
    ],
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "removeComments": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@abstractflo/shared/*": [
        "packages/shared/src/*"
      ]
    },
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false
  },
  "references": [
    {
      "path": "packages/atlas-server"
    },
    {
      "path": "packages/atlas-client"
    },
    {
      "path": "packages/atlas-shared"
    }
  ]
}
